/**app.wxss**/
page {
  background-color: #f3f4f6;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

/* 通用容器 */
.container {
  padding: 32rpx;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 按钮样式 */
.btn-primary {
  background-color: #6366f1;
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.btn-primary:active {
  background-color: #4f46e5;
}

.btn-secondary {
  background-color: #f3f4f6;
  color: #374151;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
}

.btn-secondary:active {
  background-color: #e5e7eb;
}

.btn-disabled {
  background-color: #d1d5db;
  color: #9ca3af;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 12rpx;
}

.input-field {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 30rpx;
  background-color: #ffffff;
}

.input-field:focus {
  border-color: #6366f1;
}

/* 标题样式 */
.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 24rpx;
}

/* 文本样式 */
.text-primary {
  color: #6366f1;
}

.text-secondary {
  color: #6b7280;
}

.text-success {
  color: #10b981;
}

.text-error {
  color: #ef4444;
}

/* 布局样式 */
.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.flex-row {
  flex-direction: row;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.items-center {
  align-items: center;
}

.space-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 间距 */
.mt-8 {
  margin-top: 16rpx;
}

.mt-16 {
  margin-top: 32rpx;
}

.mt-24 {
  margin-top: 48rpx;
}

.mb-8 {
  margin-bottom: 16rpx;
}

.mb-16 {
  margin-bottom: 32rpx;
}

.mb-24 {
  margin-bottom: 48rpx;
}

/* 认证徽章 */
.verified-badge {
  display: inline-flex;
  align-items: center;
  background-color: #dcfce7;
  color: #15803d;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.verified-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 96rpx 0;
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #6b7280;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 96rpx 32rpx;
}

.empty-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #6b7280;
  text-align: center;
}

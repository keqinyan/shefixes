/* miniprogram/pages/my/my.wxss */
.my-container {
  min-height: 100vh;
  background-color: #f3f4f6;
}

.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 48rpx 32rpx;
  margin-bottom: 24rpx;
}

.user-header {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.user-phone {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 12rpx;
}

.verified-status {
  display: inline-block;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.verified-text {
  font-size: 24rpx;
  color: #ffffff;
}

.section {
  background-color: #ffffff;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
}

.bookings-list {
  /* 继承 */
}

.booking-card {
  background-color: #f9fafb;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.booking-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.booking-service {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.booking-status {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
}

.booking-status.pending {
  background-color: #fef3c7;
  color: #92400e;
}

.booking-status.accepted {
  background-color: #dbeafe;
  color: #1e40af;
}

.booking-status.in_progress {
  background-color: #e0e7ff;
  color: #3730a3;
}

.booking-status.completed {
  background-color: #dcfce7;
  color: #15803d;
}

.booking-status.cancelled {
  background-color: #fee2e2;
  color: #991b1b;
}

.booking-desc {
  display: block;
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
}

.booking-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #9ca3af;
}

.btn-booking {
  margin-top: 24rpx;
  background-color: #6366f1;
  color: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
}

.btn-booking::after {
  border: none;
}

.menu-section {
  background-color: #ffffff;
  padding: 0 32rpx;
}

.menu-item {
  padding: 32rpx 0;
  border-bottom: 1rpx solid #e5e7eb;
}

.menu-text {
  font-size: 30rpx;
  color: #ef4444;
}

/* miniprogram/pages/index/index.wxss */
.index-container {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 顶部横幅 */
.banner {
  position: relative;
  height: 320rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 48rpx 32rpx;
  overflow: hidden;
}

.banner-content {
  position: relative;
  z-index: 2;
}

.banner-title {
  display: block;
  font-size: 56rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.banner-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.banner-bg {
  position: absolute;
  top: 0;
  right: -100rpx;
  width: 400rpx;
  height: 320rpx;
  opacity: 0.2;
  z-index: 1;
}

/* 服务分类 */
.services-section {
  padding: 48rpx 32rpx;
  background-color: #ffffff;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
}

.see-all {
  font-size: 28rpx;
  color: #6366f1;
}

.services-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.service-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  background-color: #f3f4f6;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.service-icon {
  width: 56rpx;
  height: 56rpx;
}

.service-name {
  font-size: 24rpx;
  color: #374151;
  text-align: center;
}

/* 推荐技师 */
.technicians-section {
  padding: 48rpx 32rpx;
  background-color: #f9fafb;
}

.technicians-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.technician-card {
  display: flex;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.technician-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
}

.technician-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.technician-header {
  display: flex;
  align-items: center;
}

.technician-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  margin-right: 8rpx;
}

.verified-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  background-color: #dcfce7;
  color: #15803d;
  border-radius: 18rpx;
  font-size: 20rpx;
}

.technician-skills {
  font-size: 26rpx;
  color: #6b7280;
  margin: 8rpx 0;
}

.technician-meta {
  display: flex;
  gap: 24rpx;
}

.technician-city,
.technician-rating {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 快速预约 */
.quick-booking {
  position: fixed;
  bottom: 120rpx;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background-color: #ffffff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.btn-quick-booking {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 48rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.btn-quick-booking::after {
  border: none;
}

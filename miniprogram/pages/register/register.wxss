/* miniprogram/pages/register/register.wxss */
.register-container {
  min-height: 100vh;
  background-color: #f3f4f6;
  padding: 48rpx 32rpx;
}

.register-header {
  margin-bottom: 48rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 12rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
}

.register-content {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
}

/* 微信信息 */
.wechat-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  margin-bottom: 48rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #ffffff;
  margin-bottom: 16rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.verified-badge {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #ffffff;
}

/* 表单部分 */
.form-section {
  /* 继承全局样式 */
}

/* 实名认证部分 */
.realname-section {
  margin: 48rpx 0;
  padding: 32rpx;
  background-color: #f9fafb;
  border-radius: 16rpx;
  border: 2rpx solid #e5e7eb;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.required-badge {
  margin-left: 12rpx;
  background-color: #fef3c7;
  color: #92400e;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.section-desc {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 24rpx;
}

.realname-status {
  margin-bottom: 24rpx;
}

.status-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #fef2f2;
  border-radius: 12rpx;
}

.status-item.verified {
  background-color: #dcfce7;
}

.status-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.status-text {
  font-size: 28rpx;
  color: #dc2626;
  font-weight: 500;
}

.status-text.success {
  color: #15803d;
}

.btn-realname {
  width: 100%;
  background-color: #6366f1;
  color: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
}

.btn-realname::after {
  border: none;
}

/* 注册按钮 */
.btn-register {
  width: 100%;
  background-color: #6366f1;
  color: #ffffff;
  border-radius: 12rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 32rpx;
  border: none;
}

.btn-register::after {
  border: none;
}

.btn-register[disabled] {
  background-color: #d1d5db;
  color: #9ca3af;
}

/* 登录链接 */
.login-section {
  text-align: center;
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #e5e7eb;
}

.login-text {
  font-size: 28rpx;
  color: #6b7280;
}

.login-link {
  font-size: 28rpx;
  color: #6366f1;
  font-weight: 600;
  margin-left: 8rpx;
}
